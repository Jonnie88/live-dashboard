name: Deploy to GitHub Pages

on:
  push:
    branches: [ deploy ]   # <-- INTE main
  workflow_dispatch:       # <-- tillåt manuell körning

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: pages
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: 'npm'
      - run: npm ci
      - name: Build SvelteKit (adapter-static)
        run: npm run build
        env:
          BASE_PATH: /live-dashboard  # repo-namnet, viktigt för rätt paths
      - uses: actions/upload-pages-artifact@v3
        with:
          path: build
  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - id: deployment
        uses: actions/deploy-pages@v4
